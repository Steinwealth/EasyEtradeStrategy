# === Standard Strategy Mode Overrides ===
# Standard strategy configuration with conservative risk parameters

# === STRATEGY MODE ===
STRATEGY_MODE=standard
PERFORMANCE_MODE=standard

# === STANDARD STRATEGY PARAMETERS ===
TARGET_WEEKLY_RETURN=0.01
BASE_RISK_PER_TRADE=0.02
MAX_RISK_PER_TRADE=0.05
MIN_QUALITY_SCORE=60
MIN_CONFIDENCE_SCORE=0.9
POSITION_SIZE_PCT=10.0
CONFIDENCE_MULTIPLIER=1.0

# === STANDARD PERFORMANCE SETTINGS ===
POLL_SECONDS=1.0
BATCH_SIZE=10
CACHE_TTL_SECONDS=60
MAX_WORKERS=4

# === STANDARD RISK MANAGEMENT ===
MAX_OPEN_POSITIONS=5
STOP_LOSS_ATR_MULTIPLIER=1.5
TAKE_PROFIT_ATR_MULTIPLIER=2.5
MAX_DAILY_TRADES=10

# === STANDARD DATA USAGE ===
DATA_PRIORITY=etrade,polygon,yfinance
POLYGON_QPM_BUDGET=100
ALPHA_VANTAGE_DAILY_LIMIT=400

# === STANDARD LOGGING ===
LOG_PATH=logs/standard_strategy.log
SESSION_LOG_LEVEL=INFO

# === STANDARD ALERTING ===
ALERT_ON_ENTRY_SIGNALS=true
ALERT_ON_EXIT_SIGNALS=true
ALERT_ON_ERRORS=true
ALERT_ON_PERFORMANCE_ISSUES=false
