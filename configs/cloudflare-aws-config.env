# Cloudflare Pages + AWS ECS Configuration
# Environment variables for the new architecture

# =============================================================================
# CLOUDFLARE PAGES CONFIGURATION
# =============================================================================
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_PROJECT_NAME=easy-etrade-oauth
CLOUDFLARE_CUSTOM_DOMAIN=oauth.easyetrade.com

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_aws_account_id_here
AWS_ECS_CLUSTER_NAME=easy-etrade-cluster
AWS_VPC_ID=your_vpc_id_here
AWS_SUBNET_IDS=subnet-xxx,subnet-yyy
AWS_SECURITY_GROUP_ID=sg-xxx

# ECR Registry
AWS_ECR_REGISTRY=${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com

# =============================================================================
# SERVICE ENDPOINTS
# =============================================================================
# Update these to point to your AWS ECS services
OAUTH_BACKEND_URL=https://oauth-api.easyetrade.com
MAIN_TRADING_URL=https://trading-api.easyetrade.com
SCANNER_SERVICE_URL=https://scanner-api.easyetrade.com

# =============================================================================
# E*TRADE OAUTH CONFIGURATION
# =============================================================================
ETRADE_CONSUMER_KEY=your_consumer_key_here
ETRADE_CONSUMER_SECRET=your_consumer_secret_here
ETRADE_SANDBOX_BASE_URL=https://api.etrade.com
ETRADE_PRODUCTION_BASE_URL=https://api.etrade.com

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_PARSE_MODE=HTML

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
SYSTEM_MODE=live
STRATEGY_MODE=demo
AUTOMATION_ENABLED=true
AUTOMATION_MODE=demo

# Risk Management
MAX_DAILY_LOSS_PERCENT=2.0
MAX_POSITION_SIZE_PERCENT=5.0
MAX_CONCURRENT_POSITIONS=3

# =============================================================================
# DATA SOURCES
# =============================================================================
# Yahoo Finance (free tier)
YAHOO_FINANCE_ENABLED=true
YAHOO_FINANCE_RATE_LIMIT=1000

# Polygon.io (paid tier)
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_ENABLED=true
POLYGON_RATE_LIMIT=5000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=your_redis_host_here
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DESTINATION=cloudwatch

# CloudWatch
AWS_CLOUDWATCH_LOG_GROUP=/ecs/easy-etrade
AWS_CLOUDWATCH_LOG_STREAM_PREFIX=ecs

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS settings for Cloudflare Pages
CORS_ORIGINS=https://oauth.easyetrade.com,https://www.easyetrade.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# SSL/TLS
SSL_VERIFY=true
SSL_CERT_PATH=/etc/ssl/certs/ca-certificates.crt

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEPLOYMENT_REGION=${AWS_REGION}
DEPLOYMENT_VERSION=2.0.0

# Auto-scaling
MIN_CAPACITY=1
MAX_CAPACITY=10
TARGET_UTILIZATION=70

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=easy-etrade-backups

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
ALERT_ENABLED=true
ALERT_CHANNELS=telegram,email
ALERT_LEVELS=error,critical

# Email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_EMAIL_TO=alerts@easyetrade.com
ALERT_EMAIL_FROM=noreply@easyetrade.com
